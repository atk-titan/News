generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model NewsArticle {
  id String @id @default(uuid())
  author String?
  title String
  description String?
  url String
  urlToImage String?
  publishedAt String
  content String?

  sourceId String
  source Source @relation(fields: [sourceId], references: [sourceId])
}

model Source{
  sourceId String @id @default(uuid())
  id String?
  name String 

  articles NewsArticle[]
}